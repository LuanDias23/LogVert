<!-- Modal Adicionar Venda -->
<div class="modal-overlay" id="addVendaModal">
    <div class="modal-content">
        <div class="modal-header">
            <h2>Adicionar Nova Venda</h2>
            <button class="close-modal" id="closeModalBtn">&times;</button>
        </div>
        <div class="modal-body">
            <form id="addVendaForm" class="form-container">
                <div class="form-row">
                    <div class="form-group">
                        <label for="idLoja">Número da Loja</label>
                        <input type="number" id="idLoja" value="1" required>
                    </div>
                    <div class="form-group">
                        <label for="idConsumidor">Número do Consumidor</label>
                        <input type="number" id="idConsumidor" value="7" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="statusPedido">Status do Pedido</label>
                        <select id="statusPedido" required>
                            <option value="ENTREGUE">Entregue</option>
                            <option value="PENDENTE" selected>Pendente</option>
                            <option value="CANCELADO">Cancelado</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="formaPagamento">Forma de Pagamento</label>
                        <input type="text" id="formaPagamento" value="Pix" required>
                    </div>
                    <div class="form-group">
                        <label for="valorTotal">Valor Total</label>
                        <input type="number" id="valorTotal" step="0.01" value="590.00" required>
                    </div>
                    <div class="form-group">
                        <label for="desconto">Desconto (%)</label>
                        <input type="number" id="desconto" step="1" value="50" min="0" max="100">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="prazoTroca">Prazo Troca (dias)</label>
                        <input type="number" id="prazoTroca" value="15" min="0">
                    </div>
                    <div class="form-group">
                        <label for="prazoDevolucao">Prazo Devolução (dias)</label>
                        <input type="number" id="prazoDevolucao" value="8" min="0">
                    </div>
                </div>

                <div class="form-group">
                    <label for="itensVendaJson">Itens da Venda (JSON)</label>
                    <textarea id="itensVendaJson" rows="6" required>
[
    {"idProduto": 24, "quantidade": 21, "detalhe": "Instalação inclusa", "valorVendido": 140.00},
    {"idProduto": 30, "quantidade": 1, "detalhe": "Garantia estendida", "valorVendido": 450.00}
]
                    </textarea>
                    <small>⚠️ **Formato JSON obrigatório:** Insira os produtos exatamente como a API espera.</small>
                </div>

        </div>

        <button type="submit" class="btn-submit-modal">Salvar Venda</button>
        <span id="vendaMessage" class="form-message"></span>
        </form>
    </div>
